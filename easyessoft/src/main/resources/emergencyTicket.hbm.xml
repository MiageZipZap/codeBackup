<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="fr.esiag.isies.pds.model.emergency.callcenter.EmergencyIncidentTicket"
		table="tp_emergency_incident_ticket" dynamic-insert="true">
		<id name="id" type="int">
			<column name="idtp_emergency_incident_ticket" precision="5"
				scale="0" />
			<generator class="increment" />
		</id>
		<property name="openedDate" type="timestamp">
			<column name="tp_emergency_incident_opened_date" not-null="false" />
		</property>
		<property name="closedDate" type="timestamp">
			<column name="tp_emergency_incident_closed_date" not-null="false" />
		</property>
		<property name="ticketState" type="int">
			<column name="tp_emergency_incident_state" precision="5"
				scale="0" />
		</property>
		<property name="idLocation" type="int">
			<column name="tp_incident_address_idtp_incident_address" precision="5" scale="0" />
		</property>
		<property name="idCaller" type="int">
			<column name="tp_common_person_idtp_common_person" precision="5" scale="0" />
		</property>
		<one-to-one name="caller" class="fr.esiag.isies.pds.model.Person"
			cascade="all"></one-to-one>
		<one-to-one name="location" class="fr.esiag.isies.pds.model.emergency.callcenter.IncidentLocalization"
			cascade="all"></one-to-one>
		<list name="emergencyIncidentInterventions" cascade="all">
			<key column="tp_emergency_incident_ticket" />
			<index column="idtp_emergency_incident_ticket" />
			<one-to-many
				class="fr.esiag.isies.pds.model.emergency.callcenter.EmergencyIncidentIntervention" />
		</list>
		<list name="injPatients" cascade="all">
			<key column="tp_emergency_incident_ticket" />
			<index column="idtp_emergency_incident_ticket" />
			<one-to-many
				class="fr.esiag.isies.pds.model.emergency.callcenter.InjuredPatient" />
		</list>
	</class>
</hibernate-mapping>